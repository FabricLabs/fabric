{
  "name": "@fabric/core",
  "version": "0.1.0-RC1",
  "description": "experimental p2p framework",
  "main": "lib/fabric.js",
  "module": "index.js",
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "book": "npm run make:docs && ecstatic _book",
    "build": "npm run make:all",
    "build:all": "npm run make:all",
    "chat": "node examples/chat.js",
    "cli": "node examples/cli.js",
    "coverage": "nyc npm test",
    "docs": "npm run make:api && ecstatic docs",
    "examples": "npm run make:examples && ecstatic assets/examples",
    "local": "npm run build && ecstatic ./assets",
    "make:all": "npm run make:api && npm run make:service && npm run make:app && npm run make:docs && npm run make:lib",
    "make:api": "npm run parse:api && node_modules/.bin/jsdoc -c jsdoc.json index.js types services README.md -d docs/ && glob-run js-beautify --indent-size 2 -r docs/*.html",
    "make:app": "webpack --progress examples/app.js -o assets/app.js",
    "make:coverage": "npm run coverage && nyc report --reporter html",
    "make:docs": "gitbook install && npm run parse:api && npm run make:examples && gitbook build",
    "make:examples": "docco --output assets/examples/ examples/*.js",
    "make:lib": "NODE_ENV=production webpack lib/fabric.js -o assets/fabric.min.js",
    "make:service": "NODE_ENV=production webpack --target=webworker examples/service.js -o assets/service.js",
    "make:viewer": "NODE_ENV=production webpack components/circuit-viewer.js -o assets/viewer.min.js",
    "parse:api": "jsdoc2md --configure jsdoc.json --files index.js types/** README.md > API.md",
    "report:coverage": "npm run make:coverage && nyc report --reporter=text-lcov > reports/coverage.lcov && codecov",
    "review:coverage": "npm run make:coverage && ecstatic reports/coverage",
    "review:todo": "grep --exclude-dir=.git --exclude-dir=node_modules --exclude-dir=reports --exclude-dir=coverage --exclude-dir=docs -rEI \"TODO|FIXME\" . 2>/dev/null > reports/todo.txt",
    "playnet": "node scripts/playnet.js",
    "start": "node scripts/app.js",
    "static": "npm run build:scripts && ecstatic assets",
    "test:app": "npm run make:service && npm run make:app && NODE_ENV=test mocha tests/fabric.app.js",
    "test:bitcoin": "mocha tests/bitcoin.core.js",
    "test:ethereum": "mocha tests/ethereum.core.js",
    "// test": "mkdir -p stores && semistandard && NODE_ENV=test mocha tests",
    "test": "mkdir -p stores && NODE_ENV=test mocha tests"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FabricLabs/fabric.git"
  },
  "keywords": [
    "fabric",
    "p2p",
    "application",
    "architecture",
    "serverless",
    "web"
  ],
  "author": "Fabric Labs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FabricLabs/fabric/issues"
  },
  "homepage": "https://github.com/FabricLabs/fabric#readme",
  "dependencies": {
    "@webassemblyjs/ast": "^1.8.5",
    "arbitrary": "^1.4.10",
    "base58check": "^2.0.0",
    "bcash": "bcoin-org/bcash#master",
    "bcoin": "bcoin-org/bcoin#master",
    "content-type": "^1.0.4",
    "dotparser": "^0.3.0",
    "elliptic": "^6.4.0",
    "fast-json-patch": "^2.0.7",
    "glob-run": "^0.1.6",
    "jade-lexer": "0.0.9",
    "jade-parser": "0.0.9",
    "javascript-state-machine": "^3.1.0",
    "js-beautify": "^1.10.0",
    "json-pointer": "^0.6.0",
    "level": "^5.0.1",
    "merkletreejs": "^0.1.6",
    "mkdirp": "^0.5.1",
    "node-fetch": "^2.6.0",
    "p-event": "^4.2.0",
    "path-match": "^1.2.4",
    "pluralize": "^8.0.0",
    "rimraf": "^2.6.2",
    "struct": "^0.0.12"
  },
  "devDependencies": {
    "@fabric/http": "FabricLabs/web#develop",
    "blessed": "^0.1.81",
    "body-parser": "^1.18.2",
    "chai": "^4.0.2",
    "codecov": "^3.6.1",
    "compiled-jade-render": "^1.0.2",
    "cross-env": "^5.1.3",
    "debug-trace": "^2.2.1",
    "docco": "^0.7.0",
    "eccrypto": "^1.0.3",
    "ecstatic": "^3.3.0",
    "eslint": "^5.6.0",
    "express": "^4.16.2",
    "gitbook-cli": "^2.3.2",
    "gitbook-plugin-edit-link": "^2.0.2",
    "gitbook-plugin-exercises": "^3.0.0",
    "gitbook-plugin-page-toc": "^1.1.0",
    "gitbook-plugin-scripts": "^1.0.2",
    "jsdoc": "FabricLabs/jsdoc#fabric",
    "jsdoc-to-markdown": "^4.0.1",
    "json-to-dot": "^1.1.0",
    "localforage": "^1.7.2",
    "mocha": "^5.2.0",
    "nyc": "^15.0.0",
    "page": "^1.7.1",
    "raw-loader": "^0.5.1",
    "semistandard": "^14.2.0",
    "semistandard-loader": "^0.0.4",
    "webpack": "4",
    "webpack-cli": "3.3.2",
    "why-is-node-running": "^2.2.0"
  },
  "nyc": {
    "exclude": [
      "tests",
      "data"
    ],
    "report-dir": "./reports/coverage",
    "temp-dir": "./reports/nyc"
  },
  "semistandard": {
    "env": [
      "mocha"
    ],
    "ignore": [
      "/_book",
      "/assets",
      "/docs",
      "/dist",
      "/components/semantic",
      "/tests/fixtures"
    ]
  }
}
